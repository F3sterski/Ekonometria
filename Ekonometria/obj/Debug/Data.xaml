<Page
    x:Class="Ekonometria.Data"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ekonometria"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FF4C0064" Margin="0,-36.667,0,-0.333">
        <Button x:ConnectionId='1' x:Name="ButtonRemoveLast"
                Content="Delete Last" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="51,405,0,0"
                Width="156" Height="119" 
                FontFamily="Simplified Arabic Fixed"
                FontSize="20" FontWeight="Bold" 
                                              />
        <Button x:ConnectionId='2' x:Name="ButtonRemoveAll"
                Content="Delete All" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="212,405,0,0"
                Width="147" Height="119" 
                FontFamily="Simplified Arabic Fixed"
                FontSize="20" FontWeight="Bold" 
                                             />
        <Button x:ConnectionId='3' x:Name="ButtonBack" 
                Content="Back"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"
                Margin="51,525,0,0"
                Width="308" Height="119" 
                FontFamily="Simplified Arabic Fixed" 
                FontSize="36" FontWeight="Bold"
                                        />
        <TextBlock x:Name="TextBlockData" HorizontalAlignment="Left" Margin="51,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="331" Width="308" FontSize="33" RenderTransformOrigin="0.481,0.502"/>

    </Grid>
</Page>

