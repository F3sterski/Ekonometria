<Page
    x:Class="Ekonometria.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ekonometria"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid Background="#FF4C0064" Margin="0,-36.667,0,-0.333">
        <TextBox x:Name="InputY" HorizontalAlignment="Left" Margin="227,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="163" Height="159" FontSize="72" PlaceholderText="Y" InputScope="Number" Background="#FF848495" TextAlignment="Center" RenderTransformOrigin="-0.671,0.497"/>
        <Button x:ConnectionId='1' x:Name="ButtonSeeData"  Content="See Data" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="36,361,0,0" Width="308" Height="119" FontFamily="Simplified Arabic Fixed" FontSize="36" FontWeight="Bold"                            />
        <TextBox x:Name="InputX" HorizontalAlignment="Left" Margin="10,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" Height="159" FontSize="72" InputScope="Number" ToolTipService.ToolTip="" PlaceholderText="X" AcceptsReturn="True" Background="#FF848495" TextAlignment="Center"/>
        <Button x:ConnectionId='2' x:Name="ButtonAdd"  Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="36,226,0,0" Width="308" Height="119" FontFamily="Simplified Arabic Fixed" FontSize="36"                     FontWeight="Bold"/>
        <Button x:ConnectionId='3' x:Name="ButtonCompute" Content="Compute" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="36,494,0,0" Width="308" Height="119" FontFamily="Simplified Arabic Fixed" FontSize="36" FontWeight="Bold"                            />
    </Grid>
</Page>

